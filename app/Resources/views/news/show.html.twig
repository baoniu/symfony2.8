{% extends '::base.html.twig' %}
{% block body -%}
    <h1>News</h1>
    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ news.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ news.title }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ news.body }}</td>
        </tr>
        </tbody>
    </table>
    <ul class="record_actions">
        <li>
            <a href="{{ path('news_index') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('news_edit', { 'id': news.id }) }}">
                Edit
            </a>
        </li>
    </ul>
{% endblock %}